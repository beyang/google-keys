{
  "name": "> Keyboard navigation for Google Search",
  "description": "Adds back the keyboard navigation of results that Google Search used to have (tab, up/down arrows, enter to visit link)",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "version": "2.0",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "globalkeys.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://*.google.com/search?*"
      ],
      "js": [
        "keyboardnav.js",
        "searchkeys.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://mail.google.com/mail/*"
      ],
      "js": [
        "gmail.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://*.slack.com/archives/*"
      ],
      "js": [
        "slack.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://news.ycombinator.com/*"
      ],
      "js": [
        "keyboardnav.js",
        "hackernews.js"
      ],
      "run_at": "document_end"
    }
  ],
  "manifest_version": 3
}